{
  "name": "teste-backend",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/passosfe/teste-backend.git",
  "author": "Felipe Passos <passos.fe@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "typeorm:migration:run": "yarn typeorm migration:run",
    "typeorm:migration:revert": "yarn typeorm migration:revert",
    "typeorm:seed:run": "yarn -r dotenv/config typeorm migration:run -c seed",
    "typeorm:seed:revert": "yarn -r dotenv/config typeorm migration:revert -c seed",
    "pretest": "yarn -r dotenv/config typeorm migration:run",
    "test": "yarn -r dotenv/config jest --runInBand",
    "posttest": "yarn -r dotenv/config typeorm schema:drop"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "date-fns": "^2.9.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "faker": "^4.1.0",
    "pg": "^7.12.1",
    "pg-hstore": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.22"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/faker": "^4.1.9",
    "@types/hapi__joi": "^16.0.11",
    "@types/jest": "^25.1.2",
    "@types/node": "^13.7.0",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-import-helpers": "^1.0.2",
    "eslint-plugin-prettier": "^3.1.0",
    "jest": "^25.1.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  }
}
